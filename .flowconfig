[options]
suppress_comment= \\(.\\|\n\\)*\\$FlowIgnore
include_warnings=true

[lints]
all=error
dynamic-export=off
unclear-type=off

[strict]
sketchy-null
sketchy-number
untyped-type-import
untyped-import
unclear-type
unsafe-getters-setters
nonstrict-import
unnecessary-optional-chain
unnecessary-invariant

[ignore]
<PROJECT_ROOT>/\..*
<PROJECT_ROOT>/node_modules/.*
